{
    "name": "vaimo/foxy",
    "description": "Fast, reliable, and secure NPM/Yarn bridge for Composer",
    "keywords": ["npm", "yarn", "composer", "bridge", "dependency manager", "package", "asset", "nodejs"],
    "homepage": "https://github.com/fxpio/foxy",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "FranÃ§ois Pluchino",
            "email": "francois.pluchino@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "composer-plugin-api": "^1.1"
    },
    "require-dev": {
        "composer/composer": "^1.5.0",
        "vaimo/composer-changelogs": "^0.15.5"
    },
    "replace": {
        "foxy/foxy": "*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Foxy\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "extra": {
        "class": "Foxy\\Foxy",
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "changelog": {
            "source": "changelog.json",
            "output": {
                "md": "CHANGELOG.md"
            }
        }
    }
}
